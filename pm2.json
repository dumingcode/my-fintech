{
    "apps": [
        {
            "name": "www",
            "script": "./bin/www",
            "node_args": "-x",
            "merge_logs": true,
            "cwd": "./",
            "log-date-format": "YYYY-MM-DD HH:mm Z",
            "log_file": "/var/log/www/out.log",
            "out_file": "/var/log/www/out.log",
            "error_file": "/var/log/www/err.log",
            "env": {
                "NODE_ENV": "production"
            }
        }
    ]
}